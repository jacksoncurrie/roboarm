<html>
<head>
    <!-- Common Head -->
    <% include partials/head.ejs %>
</head>
<body>
    <!-- Common Header -->
    <% include partials/header.ejs %>

    <!-- Roboarm controls-->
    <main>
        <!-- Rotate controls -->
        <div>
            <h2>Rotate</h1>
            <button type="button" id="left">LEFT</button>
            <input type="range" min="540" max="2360" step="20" id="sliderRotate">
            <button type="button" id="right">RIGHT</button>
            <p id="valueRotate"></p>
        </div>

        <!-- Forward/Back controls -->
        <div>
            <h2>Forward/Backwards</h2>
            <button type="button" id="back">BACK</button>
            <input type="range" min="640" max="3500" step="10" id="sliderForward">
            <button type="button" id="forward">FORWARD</button>
            <p id="valueForward"></p>
        </div>

        <!-- Up/Down controls -->
        <div>
            <h2>Up/Down</h2>
            <button type="button" id="down">DOWN</button>
            <input type="range" min="560" max="2320" step="20" id="sliderUp">
            <button type="button" id="up">UP</button>
            <p id="valueUp"></p>
        </div>
    </main>

    <!-- Common Footer -->
    <% include partials/footer.ejs %>
</body>
</html>